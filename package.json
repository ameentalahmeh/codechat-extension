{
  "name": "codechat",
  "displayName": "codechat",
  "description": "A VS Code extension to help developers with development using Llama AI, supporting native language prompts.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codechat.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "code-chat.startChat",
        "title": "Start Code Chat",
        "category": "Code Chat"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "vscode": "^1.1.37"
  }
}
